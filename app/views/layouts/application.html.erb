</head>
<body >
<div id="fb-root"></div>
<script>
  function goBack() {
    window.history.back()
  }  

  var contador = 1;
 
  function main(){
    $('#menu-icon').click(function(){
      if(contador == 1){
        $('nav').animate({
          left: '0'
        });
        contador = 0;
      } else {
        contador = 1;
        $('nav').animate({
          left: '-100%'
        });
      }
   
    });
   
  };
</script>
<% if ENV["RAILS_ENV"] == 'production' %>
