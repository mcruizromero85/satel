  <script type="text/javascript">
    function generarContadorPorTorneo(idTorneo,fecha_cierre_inscripcion){
      $('#countdown_'+idTorneo).countdown({until: fecha_cierre_inscripcion, format: 'dhmS',expiryText: "<font color='red'>Inscripciones Cerradas</font>" }); 
      }
  </script>
  <section class="Anuncios">
    <% if @torneos_inscritos_y_confirmados != nil and @torneos_inscritos_y_confirmados.size > 0 %>
      <% @torneos_inscritos_y_confirmados.each do |torneo| %>
        <article><%=torneo.titulo%><br/>
          <%= TorneosHelper.formato_cuenta_regresiva(torneo.inicio_fecha_hora_confirmacion) %>
          <br/>
          <%=torneo.estado %>
           <% if torneo.estado == 'Creado' and
              @torneos_inscritos_y_confirmados.bsearch{|torneo_confirmado| torneo_confirmado == torneo } == nil %>
            <a id="link_confirmar_torneo_<%=torneo.id%>" href='/inscripciones/confirmar/<%= torneo.id %>'>CONFIRMAR YA!!!!</a>
          <% else %>
            <a id="link_confirmar_torneo_<%=torneo.id%>" href='/torneos/iniciar/<%=torneo.id%>'>Confirmado</a>
          <% end %>
        </article>
      <% end %>
    <% end %>
    </section>
    <section class="Torneos">
      <article>
           <% @torneos.each do |torneo| %>
              <article id="ContenidoTorneo">
                <img  src="<%= image_path("versus.jpg") %>" alt="Encuentro">
                <article>
                 <h2><%= torneo.titulo %></h2><br>
                  <p><b><%= torneo.juego.nombre %></b>, m&aacute;ximo <b><%= torneo.vacantes %> slots.</b></br>Las incripciones cierran en:
                    <% un_dias_en_segundos=60 * 60 * 24
                        if torneo.cierre_inscripcion.to_i - Time.new.to_i >= un_dias_en_segundos  %>  
                          <%= TorneosHelper.formato_cuenta_regresiva(torneo.cierre_inscripcion) %>
                        <% else %>
                          <b class="contador" id='countdown_<%=torneo.id%>'></b>
                          <script type="text/javascript">
                            generarContadorPorTorneo('<%=torneo.id%>', new Date(<%= torneo.cierre_inscripcion.to_i * 1000 %>));
                          </script>
                        
                        <% end %>

                    , inscribete dando click <b><a id="link_inscripcion_torneo_<%=torneo.id%>" href="/inscripciones/new/<%=torneo.id%>">aqu&iacute;</a></b>
                  </p>
                </article>
           </article>
           <% end %>
         </article>


      </article>
      <aside>Zona de Marketing 2</aside>
    </section>