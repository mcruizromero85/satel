          <script type="text/javascript">

            var minimalData = {
            teams : [
              <% contador=0 %>
              <%   cantidad_inscripciones=@torneo.inscripcions.limit(@torneo.vacantes).count %>
              <%   @torneo.inscripcions.order(:posicion_inicial).limit(@torneo.vacantes).each do |inscripcion| %>
                <% if contador == 0 then %>                
                  ["<%= inscripcion.peso_participacion %>-<%= inscripcion.gamer.nick %>"  
                <% else %>  
                  "<%= inscripcion.peso_participacion %>-<%= inscripcion.gamer.nick %>" 
                <% end if %>
                
                <% if contador % 2 != 0 && contador!=cantidad_inscripciones then %>              
                  ,              
                <% elsif contador % 2 == 0 && cantidad_inscripciones != contador then %>              
                  ],[ 
                <% else  %>  
                  ]
                <% end if %>
                <% contador=contador+1 %>
              <% end %>
            ]
            }
          $(function() {
            $('#llaves').bracket({
            init: minimalData })
          })
          </script>

