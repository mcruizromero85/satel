<% if flash[:notice] %>  
  <div class="container-fluid">
    <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
  </div>
<% end %>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-9">
      <div class="well">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalDetalleTorneo">
            Detalle Torneo
        </button>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalReglasTorneo">
            Reglas
        </button>
        
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalLlavesTorneo">
            Llaves
        </button>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEncuentroActual">
            Encuentro Actual
        </button>

      </div>
    </div>
    <div class="col-sm-3">
      <img src="<%= @torneo.urllogo %>" alt="" style="width:100%;height: 75px;" >
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav hidden-xs" style="float: right;">
        <div class="well">
            <h3>Gamers</h3>
            <ul class="nav nav-list" id="user-list">
              <li class="nav-header">Active</li>
            </ul>
        </div>
    </div>    
    <div class="col-sm-9">
        <%= render partial: "reutilizable/chat" %>
    </div>
  </div>
</div>


<div class="modal fade" id="modalDetalleTorneo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Detalle Torneo</h4>
      </div>
        <div class="row" id="seccion_torneo_<%=@torneo.id%>">
        <div class="col-sm-4">
          <a href="/torneos/<%=@torneo.id%>">
            <img src="<%= @torneo.urllogo %>" alt="" style="width:100%;height: 180px;" >
          </a>
        </div>
        <div class="container-fluid" >
          <div class="row content">
            <a href="/torneos/<%=@torneo.id%>"><p><b><%= @torneo.titulo %></b></p></a>
            <b>Capacidad: </b> <%= @torneo.vacantes %> 
            <br/>
            <b>Estado: </b> <%= @torneo.estado %> 
            <br/>
            <b>Cierre de Inscripci&oacute;n: </b> <%= @torneo.cierre_inscripcion.strftime("%d/%m/%Y %I:%M %p") %> GMT-5          
          </div>
          <div class="col-sm-2" style="text-align: center" >
            <img class="logo_dt3_au" src="<%= image_path("cofre.jpg") %>" alt="GG E-sports" style="height: 80px"/>
            <br/>
            <br/>
            <b> <%= number_to_currency(@torneo.monto_auspiciado, precision: 2, locale: :en) %></b>          
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

