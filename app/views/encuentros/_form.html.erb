                          <option value='<%=@encuentro.gamerb.id%>'><%=@encuentro.gamerb.nombres%></option>
                        </select>
                      </h4>
                    </div>
                  </div>
                    <div id="tipo_generacion" class="ui-buttonset">
                      <center> <%= f.submit "Actualizar" %></center>
                    </div>  
                  <% end %>

        </div>
    </div>
  </div>
  <script type="text/javascript">  
    $( "#tipo_generacion" ).buttonset();
  </script>

