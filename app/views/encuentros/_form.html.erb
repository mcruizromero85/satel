  <div class="container">
    <div class="row">
        <div >
            <div class="tile">

                <span id="mensajeError"></span>

                  <%= form_for(@encuentro) do |f| %>

                    <% if @encuentro.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@encuentro.errors.count, "error") %> prohibited this encuentro from being saved:</h2>

                        <ul>
                        <% @encuentro.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <div class="table-responsive">
                    <div class="field">
                      <h4 class="text-center"><%=@encuentro.gamera.nombres%> vs <%=@encuentro.gamerb.nombres%></h4>
                    </div>
                    <div class="field">
                      <h4 class="text-center">
                        <h4 class="text-center">Ganador:</h4>
                        <select id='encuentro_gamer_ganador_id' name='encuentro_gamer_ganador_id' class='string required form-control input-lg' >
