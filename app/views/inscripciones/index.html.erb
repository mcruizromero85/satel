<section class="FrmRegistrarTorneo">
  <% if !@mensaje_inscripcion.nil? %>
  <script>
  $(function() {
    $( "#dialog-confirm" ).dialog({
      modal: true,
      buttons: {
        Ok: function() {
          $( this ).dialog( "close" );
        }
      }
    });
  });
  </script>
  <div id="dialog-confirm" title="InscripciÃ³n confirmada">
    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span><%=@mensaje_inscripcion%></p>
  </div>
  <% end %>
  <%= render partial: "reutilizable/ficha_presentacion_torneo_resumido", object: @torneo, as: :torneo %>
  <% if !@current_gamer.esta_inscrito(@torneo) %>
    <center><a  href="/inscripciones/new/<%=@torneo.id%>"><button class="link_button" type="button">Inscribirme al torneo</button></a></center>
  <% end %>
  <br/>
  <table class="Detalle_rondas" >
      <thead>
        <tr>
          <th class="header">Orden</th>
          <th class="header">Nick / Nombre Equipo</th>
          <th class="header">Fecha Inscripci&oacute;n</th>
          <th class="header">Estado</th>
          <th class="header">Accion</th>
        </tr>
      </thead>
      <tbody id="rondas">
      <% posicion=1 %>
      <% @inscripciones.each do |inscripcion| %>
        <tr>
          <td><%= posicion %></td>
          <td><img src=<%=@current_gamer.authentications[0].icono %> /><%= inscripcion.nick %></td>
          <td><%= inscripcion.created_at.strftime("%d/%m/%Y %I:%M %p") %></td>
          <td><%= inscripcion.estado %></td>
          <td>
            <% if (inscripcion.torneo.gamer == current_gamer || current_gamer == inscripcion.gamer) && inscripcion.torneo.flag_pago_inscripciones == 0  %>
              <a class="Enlace_torneosDisponibles" href="/inscripciones/<%=inscripcion.id%>/eliminar">Retirar</a>
            <% end %>
          </td>
        </tr>
        <% posicion+=1 %>
        <% end %>
      </tbody>
    </table>
    <br/>
      <center>
        <% if @mensaje_inscripcion.nil? %>
          <a class="Enlace_detalle_registrarTorneo" href="javascript:goBack();">Volver</a></center>
        <% else %>
          <a class="Enlace_detalle_registrarTorneo" href="/">Volver</a>
        <% end %>
      </center>
    <br/>
</section>
